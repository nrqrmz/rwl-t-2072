<div class="container bg-white p-4 mt-5 shadow">
  <h1><%= @list.name %></h1>

  <div class="cards">
    <% @list.movies.each do |movie| %>
      <div class="card-trip">
        <%= image_tag(movie.poster_url) %>
        <div class="card-trip-infos">
          <div>
            <div class="d-flex">
              <h2><%= movie.title %></h2>
              <h2 class='text-secondary ms-2'>- <%= movie.rating.round(1) %> ‚≠ê</h2>
            </div>
            <p><%= movie.overview %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="my-5">
    <%= simple_form_for [@list, @bookmark] do |f| %>
      <%= f.association :movie %>
      <%= f.input :comment %>
      <%= f.submit class: 'btn btn-primary' %>
    <% end %>
  </div>

  <%= link_to 'Back to lists', lists_path, class: 'btn btn-secondary' %>
</div>
